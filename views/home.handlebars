<div class="container">
    <div class="row header">
        <div class="twelve columns">
            <h1>Waiter's Webapp</h1>
        </div>
    </div>

    <div class="row entry">
        <div class="twelve columns">

            <p id="messages">{{messages.info}}</p>

            <p id="errorMessages" style="color:red">{{messages.error}}</p>
        </div>
    </div>

    <div class="row weekDays-selector">
        <div class="two columns begin"></div>

        <form action=" /waiters/{{name}}" method="POST">
            <div class="one columns">
                <input type="checkbox" id="weekday-sun" name="day" value="Sunday" class="weekday" />
                <label for="weekday-sun">Sun</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-mon" name="day" value="Monday" class="weekday" />
                <label for="weekday-mon">Mon</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-tue" name="day" value="Tuesday" class="weekday" />
                <label for="weekday-tue">Tue</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-wed" name="day" value="Wednesday" class="weekday" />
                <label for="weekday-wed">Wed</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-thu" name="day" value="Thursday" class="weekday" />
                <label for="weekday-thu">Thu</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-fri" name="day" value="Friday" class="weekday" />
                <label for="weekday-fri">Fri</label>
            </div>

            <div class="one columns">
                <input type="checkbox" id="weekday-sat" name="day" value="Saturday" class="weekday" />
                <label for="weekday-sat">Sat</label>
            </div>

            <div class="one columns end"></div>
            <div class="two columns"> <button type="submit" class="btn">Add Shifts</button></div>
        </form>

    </div>

    <div class="row">
        <div class="twelve columns">
            <a href="/days">
                <button type="button" class="btn  admin-btn">Admin</button>
            </a>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="twelve columns">
            <footer>
                <p>Proudly developed by Sibabalwe Qamata &copy; 2018</p>
            </footer>
        </div>
    </div>

</div>

<script>
    function filterTown() {
        var selectedTown = document.querySelector(".selectWhichTown");

        location.href = "/filter/" + selectedTown.value;
    }
</script>